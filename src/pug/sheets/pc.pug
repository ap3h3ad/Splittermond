mixin tab-nav-item(tabId)
    button(type="action" name="act_"+tabId)
        block

+hiddeninput("editmode", "")

+hiddeninput("tab", "grundwerte")
.tab-nav
    +tab-nav-item("einstellungen", "icon")
        span.icon y
    +tab-nav-item("grundwerte") 
        | Grundwerte
    +tab-nav-item("fertigkeiten")
        | Fertigkeiten & Magie
    +tab-nav-item("kampf") 
        | Kampf &  Meisterschaften
    +tab-nav-item("ausruestung")
        | Ausr√ºstung
    label.switch
        input(type="checkbox", name="attr_editmode")
        span.slider
        span.active edit
        span.inactive play

.tab-nav-shadow

.roll-options
    h2 Probenoption
    .data-section-row
        span
            label Modifikator
            +numberinput("probenmodifikator",0)
        span
            label Schwierigkeit
            +numberinput("probenschwierigkeit",15)
        span
            label Wurfoption
            select(name="attr_probenwurfoption")
                option(value="standard") Standard
                option(value="sicherheit") Sicherheit
                option(value="risiko") Risiko
        span
            label Sichtbarkeit
            .switch
                input(type="checkbox", name="attr_probensichtbarkeit")
                span.slider
                span.active GM
                span.inactive Alle
.roll-options-shadow.play-only

