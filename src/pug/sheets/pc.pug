mixin tab-nav-item(tabId)
    button(type="action" name="act_"+tabId)
        block

+hiddeninput("tab", "grundwerte")
.tab-nav
    +tab-nav-item("einstellungen", "icon")
        span.icon y
    +tab-nav-item("grundwerte") 
        | Grundwerte
    +tab-nav-item("fertigkeiten")
        | Fertigkeiten & Magie
    +tab-nav-item("kampf") 
        | Kampf &  Meisterschaften
    +tab-nav-item("entwicklung") 
        | Charakterentwicklung
    +tab-nav-item("ausruestung")
        | Ausrüstung


.tab-group.paper
    .watermark
        .tab-content.einstellungen
            h2 Einstellungen
            div
                | 7
                +textinput("test","7", true)
                |&nbsp(+
                +textinput("testmod","0", true)
                | )
        .tab-content.grundwerte
            include tabs/grundwerte.pug
        .tab-content.fertigkeiten
            include tabs/fertigkeiten.pug
        .tab-content.kampf
            include tabs/kampf.pug
        .tab-content.entwicklung
            include tabs/charakterentwicklung.pug
        .tab-content.ausruestung 
            h2 Aussrüstung