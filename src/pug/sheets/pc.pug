mixin tab-nav-item(tabId)
    button(type="action" name="act_"+tabId)
        block

+hiddeninput("editmode", "")

+hiddeninput("tab", "grundwerte")
.tab-nav
    +tab-nav-item("einstellungen", "icon")
        span.icon y
    +tab-nav-item("grundwerte") 
        | Grundwerte
    +tab-nav-item("fertigkeiten")
        | Fertigkeiten & Magie
    +tab-nav-item("kampf") 
        | Kampf &  Meisterschaften
    +tab-nav-item("ausruestung")
        | Ausr√ºstung
    label.switch
        input(type="checkbox", name="attr_editmode")
        span.slider
        span.active edit
        span.inactive play

.tab-nav-shadow

.roll-options
    h2 Probenoption
    .data-section-row
        span
            label Modifikator
            span
                button.incdec(type="action", name="act_decmod") _
                +numberinput("probenmodifikator",0)
                button.incdec(type="action", name="act_incmod") &
        span
            label Schwierigkeit
            span
                button.incdec(type="action", name="act_decschwierigkeit") _
                +numberinput("probenschwierigkeit",15)
                button.incdec(type="action", name="act_incschwierigkeit") &
        span
            label Wurfoption
            +hiddeninput("probenwurfoption", "standard")
            span.switch-field
                button(type="action", name="act_probenwurfoption_sicherheit") Sicherheit
                button(type="action", name="act_probenwurfoption_standard") Standard
                button(type="action", name="act_probenwurfoption_risiko") Risiko
        span
            label Sichtbarkeit
            label.switch
                input(type="checkbox", name="attr_probensichtbarkeit")
                span.slider
                span.active GM
                span.inactive Alle
.roll-options-shadow.play-only

